USE db_desafio_java;

CREATE TABLE tb_pessoa(
	id INT AUTO_INCREMENT NOT NULL,
    nome VARCHAR(100) NOT NULL,
    data_nascimento DATE NOT NULL,
    genero VARCHAR(20) NOT NULL,
    telefone VARCHAR(25),
    email VARCHAR(50),
    PRIMARY KEY (id)
);

CREATE TABLE tb_formacao(
	id INT AUTO_INCREMENT NOT NULL,
	nomeCurso VARCHAR(100) NOT NULL,
    instituicao VARCHAR(100) NOT NULL,
    nivelCurso VARCHAR(50) NOT NULL,
    dataFormacao DATE NOT NULL,
    PRIMARY KEY (id)
);

CREATE TABLE tb_time(
	id INT AUTO_INCREMENT NOT NULL,
    nome VARCHAR (50) NOT NULL,
    setor VARCHAR (50) NOT NULL,
    PRIMARY KEY (id)
);

ALTER TABLE tb_pessoa ADD id_time INT;
ALTER TABLE tb_pessoa ADD FOREIGN KEY(id_time) REFERENCES tb_time(id);

ALTER TABLE tb_formacao ADD id_pessoa INT;
ALTER TABLE tb_formacao ADD FOREIGN KEY(id_pessoa) REFERENCES tb_pessoa(id);
